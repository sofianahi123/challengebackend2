<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create</title>
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>
    <!--Inicio Header -->
    <%-include ('partials/header2') %>
    <main class="container">
        <section class="form__create">
            
            <form action="/create" method="post" enctype="multipart/form-data">
                <h1 class="admin__title oneline">CREAR NUEVO ITEM</h1>

                <div class="select__categoria">
                    <label class="label__select" for="categoria">Categoría:</label>
                    <select class="select__item" name="category_id" id="categoria">
                        <option id="option" class="select__option" value="">Seleccionar</option>
                        <% categories.forEach(category => { %>
                            <option id="option" class="select__option" value="<%= category.category_id %>"><%= category.category_name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="select__licencia">
                    <label class="label__select" for="licencia">Licencia:</label>
                    <select class="select__item" name="licence_id" id="licencia">
                        <option id="option" class="select__option" value="">Seleccionar</option>
                        <% licenses.forEach(licence => { %>
                            <option id="option" class="select__option" value="<%= licence.licence_id %>"><%= licence.licence_name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="nom__producto oneline">
                    <label class="label__input" for="nombre del producto">Nombre del Producto:</label>
                    <input class="input__item " type="text" name="product_name" placeholder="Kakashi Hatake Shippuden Saga">
                </div>
                <div class="descripcion oneline">
                    <textarea class="textarea__descripcion" name="product_description" id="" cols="30" rows="10"
                        placeholder="Descripción del producto"></textarea>
                </div>

                <div class="sku__item">
                    <label class="label__input" for="sku">SKU:</label>
                    <input class="input__item input__sku" type="text" name="sku" placeholder="SSK111AB001">
                </div>
                <div class="precio__item">
                    <label class="label__input " for="precio">Precio:</label>
                    <input class="input__item input__precio" type="text" name="price" placeholder="$0.000,00">
                </div>
                <div class="stock__item">
                    <label class="label__input input__stock" for="stock">Stock:</label>
                    <input class="input__item" type="text" name="stock" placeholder="0">
                </div>
                <div class="descuento__item">
                    <label class="label__input" for="descuento">Descuento:</label>
                    <input class="input__item" type="text" name="discount" placeholder="0%">
                </div>
                <div class="cuota__item">
                    <label class="label__input" for="cuotas">Cuotas:</label>
                    <select class="select__item__cuota" name="dues" id="cuotas">
                        <option class="select__option" value="3">3 cuotas sin intereses</option>
                        <option class="select__option" value="6">6 cuotas sin intereses</option>
                        <option class="select__option" value="12">12 cuotas sin intereses</option>
                    </select>
                </div>
                <div class="img__item oneline">
                    <label class="label__input" for="imagenes">Imágenes:</label>
                    <input class="input__item__file" type="file" name="images" multiple>  
                </div> 
                <div class="btn__create oneline">
                    <button class="btn" type="submit">Agregar Producto</button>
                    <button class="btn btn-clear" type="submit">Limpiar</button>
                </div>               
            </form>
        </section>
    </main>
    <!-- Footer -->
    <%-include ('partials/footer2') %>
    <script src="../js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>